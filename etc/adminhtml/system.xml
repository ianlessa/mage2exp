<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
<system>
    <tab id="ianlessa_mage2exp_config_tab" translate="label" sortOrder="10">
        <label>Mage2Exp</label>
    </tab>
    <section id="ianlessa_mage2exp"
             translate="label"
             sortOrder="130"
             showInDefault="1"
             showInWebsite="1"
             showInStore="1"
    >
        <class>ianlessa_mage2exp_config_section_class</class>
        <label>General</label>
        <tab>ianlessa_mage2exp_config_tab</tab>
        <resource>IanLessa_Mage2Exp::ianlessa_config</resource>
        <group id="general"
               translate="label"
               type="text"
               sortOrder="10"
               showInDefault="1"
               showInWebsite="1"
               showInStore="1"
        >
            <label>General Config</label>
            <field id="enable"
                   translate="label"
                   type="select"
                   sortOrder="1"
                   showInDefault="1"
                   showInWebsite="0"
                   showInStore="0"
            >
                <label>Mage2Exp Enable</label>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                <comment>Enable\Disable Mage2Exp module.</comment>
            </field>
        </group>
    </section>
</system>
</config>